{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "worker": "tsx src/workers/worker.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest run",
    "prisma:generate": "prisma generate --schema ./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ./prisma/schema.prisma --name init",
    "prisma:deploy": "prisma migrate deploy --schema ./prisma/schema.prisma",
    "prisma:seed": "prisma generate --schema ./prisma/schema.prisma && tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "@customer-support-ai/ai": "file:../../packages/ai",
    "@customer-support-ai/ingestion": "file:../../packages/ingestion",
    "@prisma/client": "^5.21.1",
    "@opentelemetry/api-logs": "^0.55.0",
    "@opentelemetry/auto-instrumentations-node": "^0.55.0",
    "@opentelemetry/exporter-otlp-http": "^0.55.0",
    "@opentelemetry/resources": "^1.29.0",
    "@opentelemetry/sdk-metrics": "^1.29.0",
    "@opentelemetry/sdk-node": "^0.55.0",
    "@opentelemetry/semantic-conventions": "^1.29.0",
    "bullmq": "^5.29.3",
    "ioredis": "^5.4.1",
    "@t3-oss/env-core": "^0.11.1",
    "dotenv": "^16.4.7",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "prisma": "^5.21.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
