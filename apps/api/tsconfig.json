{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": false,
    "paths": {
      "@api/*": ["./*"],
      "@ai/*": ["../../packages/ai/src/*"],
      "@ingestion/*": ["../../packages/ingestion/src/*"],
      "@ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": ["./src/**/*", "./prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
